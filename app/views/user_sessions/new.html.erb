<%= semantic_form_for @user_session, :url => login_path do |form| %>
  <%= form.inputs do %>
    <%= form.input :email %>
    <%= form.input :password %>
  <% end %>
  <%= form.buttons do %>
    <%= form.commit_button "Login" %>
  <% end %>
<% end %>

<div id="alternate-link">No account? <%= link_to "Register now!", signup_path, :class => "button", :id => "register-link" %></div>