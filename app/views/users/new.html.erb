<%= semantic_form_for @user, :url => signup_path do |form| %>
  <%= form.inputs do %>
    <%= form.input :first_name %>
    <%= form.input :last_name %>
    <%= form.input :email %>
    <%= form.input :password %>
    <%= form.input :password_confirmation, :label => "Confirmation" %>
  <% end %>
  <%= form.buttons do %>
    <%= form.commit_button "Register" %>
  <% end %>
<% end %>

<div id="alternate-link">Already have an account? <%= link_to "Login now!", login_path, :class => "button", :id => 'login-link' %></div>